<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PurpleAccent">
        <item name="colorAccent">@color/purple_5e2a84</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="lodjinha_text_app_font_pacifico" parent="TextAppearance.AppCompat">
        <item name="typeface">fonts/Pacifico-Regular.ttf</item>
    </style>

    <style name="lodjinha_text_app_font_roboto_regular" parent="TextAppearance.AppCompat">
        <item name="typeface">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="lodjinha_text_app_font_roboto_bold" parent="TextAppearance.AppCompat">
        <item name="typeface">fonts/Roboto-Bold.ttf</item>
    </style>

    <style name="lodjinha_text_app_font_roboto_medium" parent="TextAppearance.AppCompat">
        <item name="typeface">fonts/Roboto-Medium.ttf</item>
    </style>

    <style name="lodjinha_text_app_font_roboto_light" parent="TextAppearance.AppCompat">
        <item name="typeface">fonts/Roboto-Light.ttf</item>
    </style>


</resources>
